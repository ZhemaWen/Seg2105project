<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library"
    tools:context=".adminHome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="133dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="100dp"
        android:background="@color/latte"
        android:fontFamily="@font/lobster"
        android:shadowDx="20"
        android:shadowDy="30"
        android:shadowRadius="20"
        android:text="Welcome to Tutron. You are logged in as an User"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calistoga"
        android:text="Logout"
        android:textColor="@color/mocha"
        app:backgroundTint="@color/white"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="264dp" />

    <TextView
        android:id="@+id/messagetextView"
        android:layout_width="317dp"
        android:layout_height="133dp"
        android:layout_marginTop="28dp"
        android:background="@color/latte_brown"
        android:text=""
        android:textColor="@color/mocha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <!-- Add this button at the appropriate location in your layout -->
    <Button
        android:id="@+id/topicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Topics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagetextView" />

    <Button
        android:id="@+id/RequestsButton"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:text="Requests"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messagetextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/viewProfileRatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile and Rating"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="667dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
