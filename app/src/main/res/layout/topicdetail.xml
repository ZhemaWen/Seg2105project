<!-- topic_detail.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/library"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTopicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/calistoga"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewYearsOfExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/calistoga" />

    <TextView
        android:id="@+id/textViewExperienceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/calistoga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRemoveTopic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/calistoga"
            android:text="Remove"
            android:textColor="@color/mocha"
            android:textSize="16sp"
            app:backgroundTint="@color/latte" />

        <Button
            android:id="@+id/buttonOffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/calistoga"
            android:text="Offer"
            android:textColor="@color/mocha"
            android:textSize="16sp"
            app:backgroundTint="@color/latte" />

    </LinearLayout>

</LinearLayout>
