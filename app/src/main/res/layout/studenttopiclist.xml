<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTopicsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/latte"
        android:fontFamily="@font/calistoga"
        android:padding="16dp"
        android:text="Topics"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewTopics"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calistoga"
        android:text="Search topics"
        android:textColor="@color/mocha"
        android:textColorHighlight="@color/latte"
        android:textColorLink="@color/latte"
        android:textSize="18sp"
        app:backgroundTint="@color/latte" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:hint="Search keyword"
        android:inputType="text"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/lobster"
        />

    <Button
        android:id="@+id/buttonSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calistoga"
        android:text="Sort topics"
        android:textColor="@color/mocha"
        android:textSize="18sp"
        app:backgroundTint="@color/latte" />


</LinearLayout>
